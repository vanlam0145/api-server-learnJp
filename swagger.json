    "/avatars": {
      "put": {
        "tags": ["Avatar"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "change avatar",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            },
            "encoding": {
              "avatar": {
                "contentType": "image/png, image/jpeg"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "$ref": "#/definitions/responses/UnauthorizedError"
          }
        }
      }
    }
  },
  "definitions": {
    "responses": {
      "UnauthorizedError": {
        "description": "Access token is missing or invalid"
      },
      "UnprocessableEntity": {
        "description": "${field} is required"
      }
    },
    "Course": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "mean": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "History": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string",
          "example": {
            "topic": "5ddc170806a7a105c9d8d0e0"
          }
        },
        "answers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              },
              "correct": {
                "type": "boolean"
              }
            },
            "example": {
              "_id": "5ddc170806a7a105c9d8d154",
              "correct": true
            }
          }
        }
      }
    },
    "SetCourse": {
      "type": "object",
      "properties": {
        "course_id": {
          "type": "string"
        },
        "contents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "mean": {
                "type": "string"
              }
            }
          }
        },
        "isAdd": {
          "type": "boolean"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "userForWeb": {
          "type": "boolean"
        }
      }
    },
    "Login": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "setUsername": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string"
        },
        "newName": {
          "type": "string"
        }
      }
    },
    "setQuestion": {
      "type": "object",
      "properties": {
        "sumQuestion": {
          "type": "number",
          "minimum": 4
        },
        "numberAnswer": {
          "type": "number",
          "minimum": 4
        }
      }
    }
  }
}
